{
  "service": {
<% if @service['id'] %>
    "id": "<%= @service['id'] %>",
<% end %>
<% if @service['tags'] %>
    "tags": "<%= @service['tags'] %>",
<% end %>
<% if @service['port'] %>
    "port": <%= @service['port'] %>,
<% end %>
<% if @service['type'] %>
    "check": {
  <% if @service['type'] == :script %>
      "script": "<%= @service['script'] %>",
      "interval": "<%= @service['interval'] %>"
  <% elsif @service['type'] == :ttl %>
      "ttl": "<%= @service['ttl'] %>"
  <% end %>
    }
<% end %>
    "name": "<%= @service['name'] %>"
  }
}
